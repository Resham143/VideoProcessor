@model VideoUpload.Pages.IndexModel

<!-- Catalogue View -->
<div id="catalogueView" class="view-section d-none">
    <div class="row h-100">
        <div class="col-12 mb-3">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Video Player</h5>
                </div>
                <div class="card-body">
                    <div id="videoContainer" class="video-container">
                        <p class="text-muted text-center">Select a video from the table to start playback</p>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="card shadow-sm h-100"> 
                <div class="card-body p-0 d-flex flex-column" style="max-height: calc(100vh - 400px);">
                    <div class="table-responsive flex-grow-1" id="catalogueTableContainer" style="overflow-y: auto;">
                        <table class="table table-hover mb-0">
                            <thead class="table-light sticky-top">
                                <tr>
                                    <th>Video Filename</th>
                                    <th>File Size KB</th>
                                </tr>
                            </thead>
                            <tbody id="catalogueTableBody">
                                @if (Model.VideoFiles.Any())
                                {
                                    @foreach (var file in Model.VideoFiles)
                                    {
                                        <tr class="video-row" style="cursor: pointer;" 
                                            data-filename="@file.FileName" 
                                            onclick="playVideo('@file.FileName')">
                                            <td>@file.FileName</td>
                                            <td>@FormatFileSize(file.FileSize)</td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                    <div id="catalogueEmptyMessage" class="p-3 text-center text-muted @(Model.VideoFiles.Any() ? "d-none" : "")">
                        <p class="mb-0">No videos in catalogue. Upload some MP4 files to get started.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string FormatFileSize(long bytes)
    {
        if (bytes <= 0) return "0";
        var kb = bytes / 1024.0;
        return $"{Math.Round(kb)}";
    }
}
